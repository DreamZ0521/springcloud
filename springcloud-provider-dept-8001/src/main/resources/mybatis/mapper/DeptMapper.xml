<?xml version="1.0" encoding="utf-8"  ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/schema/mybatis-3-mapper.dtd">
<mapper namespace="com.dream.springcloud.dao.DeptDao" >

   <insert id="addDept" parameterType="Dept">
       insert into dept(dname,db_source)
       value(#{dname},DATABASE())
   </insert>

    <select id="querById" resultType="Dept" parameterType="Long">
        select * from dept where deptno = #{deptno}
    </select>

    <select id="querByAll" resultType="Dept" >
        select * from dept}
    </select>

</mapper>